@page "/"
@inject IJSRuntime jsRuntime;

<div class="container m-page-container">
    <div class="form-group row" style="margin-top:30px">
        <div class="col-sm-2"></div>
        <label for="amount-input" class="col-sm-2 col-form-label">Amount</label>
        <div class="col-sm-6">
            <input type="number" class="form-control" id="amount-input" value="100"/>
        </div>
        <div class="col-sm-2"></div>
    </div>
    <div class="row">
        <div class=col-sm-2></div>
        <div class=col-sm-8>
            <div id="paypal-button-container"></div>
        </div>
        <div class=col-sm-2></div>
    </div>
    <div class="row">
        <div class=col-sm-2></div>
        <div class=col-sm-8>
            <div id="paypal-info-container"></div>
        </div>
        <div class=col-sm-2></div>
    </div>
    
</div>

@code {

    protected async override Task OnAfterRenderAsync(bool firstRender)
    {
        await jsRuntime.InvokeVoidAsync("renderPaypalButtons");
        await base.OnAfterRenderAsync(firstRender);
    }
}